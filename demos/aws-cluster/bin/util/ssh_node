#!/bin/bash -eu

SSH_USER=${SSH_USER:-ec2-user}

node_num=$1; shift
node_index=$((node_num - 1))

public_dns=$(terraform output -json conjur_master_nodes_public | jq -r ".[$node_index]")

echo "Connecting to node $node_num ($public_dns)..."

ssh -i "$SSH_KEY_FILE" \
    -o "StrictHostKeyChecking no" \
    "$SSH_USER@$public_dns" "$@"
